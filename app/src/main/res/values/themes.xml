<resources>
    <style name="Theme.ZSticker" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Custom Orange Colors -->
        <item name="colorPrimary">@color/orange_primary</item>
        <item name="colorPrimaryContainer">@color/orange_container</item>
        <item name="colorOnPrimaryContainer">@color/orange_on_container</item>
        <item name="colorSecondary">@color/orange_primary_dark</item>
        <item name="colorSecondaryContainer">@color/orange_container</item>
        <item name="colorOnSecondaryContainer">@color/orange_on_container</item>
        
        <!-- Surface Colors -->
        <item name="colorSurface">@color/light_surface</item>
        <item name="colorSurfaceContainer">@color/light_surface_container</item>
        <item name="colorOnSurface">@color/light_on_surface</item>
        <item name="android:colorBackground">@color/light_background</item>
        
        <!-- System Bars -->
        <item name="android:statusBarColor">?android:attr/colorBackground</item>
        <item name="android:navigationBarColor">?attr/colorSurfaceContainer</item>
    </style>

    <style name="Theme.ZSticker.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>
        <item name="postSplashScreenTheme">@style/Theme.ZSticker</item>
        <item name="windowSplashScreenBehavior">icon_animations</item>
    </style>

    <style name="Theme.ZSticker.Dialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="shapeAppearanceHeader">@style/ShapeAppearance.ZSticker.ExtraLargeComponent</item>
        <item name="shapeAppearance">@style/ShapeAppearance.ZSticker.ExtraLargeComponent</item>
        <item name="buttonBarPositiveButtonStyle">@style/Widget.Material3.Button.TextButton</item>
        <item name="buttonBarNegativeButtonStyle">@style/Widget.Material3.Button.TextButton</item>
        <item name="android:windowBackground">?attr/colorSurfaceContainerHigh</item>
    </style>


    <style name="ShapeAppearance.ZSticker.ExtraLargeComponent" parent="ShapeAppearance.Material3.ExtraLargeComponent">
        <item name="cornerSize">28dp</item>
    </style>

    <style name="ShapeAppearance.ZSticker.MediumComponent" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerSize">20dp</item>
    </style>

    <style name="InfoItemStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:padding">16dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="InfoIconStyle">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="tint">?attr/colorPrimary</item> 
    </style>
</resources>
