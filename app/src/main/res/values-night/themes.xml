<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.ZSticker" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorOnPrimary">@android:color/black</item>
        
        <item name="android:statusBarColor">?android:attr/colorBackground</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:navigationBarColor">?attr/colorSurfaceContainer</item>
    </style>

    <style name="ShapeAppearance.ZSticker.MediumComponent" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerSize">16dp</item>
    </style>

    <style name="InfoItemStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:padding">16dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="InfoIconStyle">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="app:tint">?attr/colorPrimary</item>
    </style>
</resources>
